generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



model SprintSession {
  id          Int              @id @default(autoincrement())
  title       String
  description String
  sessionStart DateTime?
  sessionEnd DateTime?
  sprints    Sprint[]
}

model StageSession {
  id          Int              @id @default(autoincrement())
  title       String
  sessionStart DateTime?
  sessionEnd DateTime?
  sprints    Stage[]
}



 model Guest {
  id      Int      @id @default(autoincrement())
  tokenId   String   @unique
  flag   String 
  collaboratorId String  
  host   Int
//  status    Role     @default(GUEST)
  stages   Stage[]
  endDate String
  sprints Sprint[]
}

model Sprint {
  id     Int    @id @default(autoincrement())
  title   String
  pblished   Boolean
  guests Guest[]
  SCategory SCategory[]
  stages Stage[]
  grids Grid[]

  Session SprintSession[]
}


model Stage {
  id         Int        @id @default(autoincrement())
  title      String
  published  Boolean    @default(false)
  author     Guest       @relation(fields: [authorId], references: [id])
  authorId   Int
  grids Grid[]
  categories Category[]

  Sprint Sprint[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt


  StageSession StageSession[]
}
model Ayah {
  id  Int        @id @default(autoincrement())
  juz  Int
  order  Int    
  text     String
  
  Grid Grid[]
}

model Grid {
  id  Int        @id @default(autoincrement())
  arabName  String
  ayahs  Ayah[]    
  souraName     String
  title     String
  souraNb Int
  grid Int
  group Int
  stages Stage[]

  Sprint Sprint[]
}
  

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  stages Stage[]
  //sprints Sprint[]
}
model SCategory {
  id    Int    @id @default(autoincrement())
  name  String
  sprints Sprint[]
  //sprints Sprint[]
}
