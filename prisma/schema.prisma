generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Guest {
  id      Int      @id @default(autoincrement())
  tokenId   String   @unique
  hostId    Int
//  role    Role     @default(GUEST)
  stages   Stage[]
  sprints Sprint[]
}

model Sprint {
  id     Int    @id @default(autoincrement())
  bio    String
  userId Int    @unique
  users Guest[]
  SCategory SCategory[]
  stages Stage[]
}

model Stage {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  title      String
  published  Boolean    @default(false)
  author     Guest       @relation(fields: [authorId], references: [id])
  authorId   Int
  grids Grid[]
  categories Category[]

  Sprint Sprint[]
}

model Ayah {
  id  Int        @id @default(autoincrement())
  juz  Int
  order  Int    
  text     String
  
  Grid Grid[]
}

model Grid {
  id  Int        @id @default(autoincrement())
  arabName  String
  ayahs  Ayah[]    
  souraName     String
  title     String
  souraNb Int
  grid Int
  group Int
  Stage Stage[]
}
  

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  stages Stage[]
  //sprints Sprint[]
}
model SCategory {
  id    Int    @id @default(autoincrement())
  name  String
  sprints Sprint[]
  //sprints Sprint[]
}
