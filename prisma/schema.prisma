generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guest {
  id      Int      @id @default(autoincrement())
  tokenId   String   @unique
  flag   String 
  collaboratorId String  
  host   Int
 //status    Role     @default(GUEST)
  createdAt  DateTime @default(now())
  country String
  password String
  onLine Boolean
  endDate String
  stages   Stage[]
  sprints Sprint[]

  }
model Stage {
  id          Int              @id @default(autoincrement())
  stageId Int
  createdAt DateTime @default(now())
  souraName String
  souraNb Int
  grid Int
  startOn DateTime
  createdById String
  guests Guest[]
  ayahs Ayah[]

  sprints Sprint[]
}
model Ayah {
  index  Int        @id @default(autoincrement())
  juz  Int
  order  Int    
  text     String
  stages Stage[]
}



 
model Sprint {
  id     Int    @id @default(autoincrement())
  sprintId Int
  createdAt  DateTime @default(now())
  souraName String 
  souraNb Int
  grid Int
  startOn DateTime
  createdById String
  pblished   Boolean
  guests Guest[]
  stages Stage[]
 }



